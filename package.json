{
  "name": "lbot-demo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup":         "pnpm install && pnpm seed",
    "dev":           "pnpm --parallel run dev",
    "dev:frontend":  "pnpm --filter lbot-frontend dev",
    "dev:backend":   "pnpm --filter lbot-backend  dev",
    "build":         "pnpm --filter lbot-frontend build",
    "start":         "pnpm --filter lbot-backend  start",
    "seed":          "pnpm --filter lbot-backend  seed",
    "reset-db":      "node -e \"require('fs').rmSync('lbot-dev.db',{force:true});require('fs').rmSync('lbot-dev.db-shm',{force:true});require('fs').rmSync('lbot-dev.db-wal',{force:true});\" && pnpm seed",
    "check":         "pnpm --filter lbot-frontend check",
    "kill-ports":    "npx kill-port 3000 4321"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["argon2", "better-sqlite3", "esbuild", "sharp"]
  }
}
