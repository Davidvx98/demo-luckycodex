---
/**
 * AccountSummary.astro
 * Vista de resumen del dashboard.
 * FASE 6: implementación completa con datos reales desde la API.
 */
const apiUrl = import.meta.env.PUBLIC_API_URL;
---
<div>
  <h1 class="text-2xl font-bold text-white mb-8">Resumen de cuenta</h1>
  <div id="summary-content" class="text-gray-400">Cargando...</div>
</div>

<script is:inline define:vars={{ apiUrl }}>
  async function loadSummary() {
    const el = document.getElementById('summary-content');
    if (!el) return;
    try {
      const res  = await fetch(`${apiUrl}/api/dashboard/summary`, { credentials: 'include' });
      if (!res.ok) { window.location.href = '/'; return; }
      const { summary } = await res.json();

      el.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Email</p>
            <p class="text-white font-medium">${summary.email}</p>
          </div>
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Plan activo</p>
            <p class="text-brand-500 font-semibold">${summary.plan_name ?? 'Sin plan'}</p>
          </div>
          <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
            <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Expira</p>
            <p class="text-white font-medium">${summary.plan_expires_at ?? '—'}</p>
          </div>
        </div>
      `;
    } catch {
      el.innerHTML = '<p class="text-red-400">Error cargando datos.</p>';
    }
  }

  loadSummary();
</script>
