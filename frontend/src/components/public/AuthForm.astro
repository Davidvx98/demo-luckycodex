---
const GOOGLE_CLIENT_ID = import.meta.env.PUBLIC_GOOGLE_CLIENT_ID;
const API              = import.meta.env.PUBLIC_API_URL;
---
<section id="auth" class="py-16 sm:py-24 bg-gray-900">
  <div class="max-w-md mx-auto px-4 sm:px-6">

    <div class="text-center mb-10">
      <h2 class="text-4xl font-bold text-white mb-2">Accede a tu cuenta</h2>
      <p class="text-gray-400">O crea una nueva en segundos.</p>
    </div>

    <!-- Demo hint -->
    <div class="bg-brand-500/10 border border-brand-500/30 rounded-xl p-4 mb-8 text-sm text-brand-300">
      <strong>Demo:</strong> usa <code class="bg-gray-800 px-1.5 py-0.5 rounded text-brand-400">prueba@lbot.dev</code>
      con contrase&ntilde;a <code class="bg-gray-800 px-1.5 py-0.5 rounded text-brand-400">prueba</code>
    </div>

    <!-- Tabs -->
    <div class="flex rounded-xl bg-gray-800 p-1 mb-8 gap-1" role="tablist">
      <button id="tab-login" role="tab"
        class="flex-1 py-2.5 rounded-lg text-sm font-semibold text-white bg-brand-600 transition"
        onclick="switchTab('login')">
        Iniciar sesi&oacute;n
      </button>
      <button id="tab-register" role="tab"
        class="flex-1 py-2.5 rounded-lg text-sm font-semibold text-gray-400 hover:text-white transition"
        onclick="switchTab('register')">
        Registrarse
      </button>
    </div>

    <!-- Login -->
    <form id="form-login" class="space-y-4" novalidate>
      <input type="email" name="email" required autocomplete="email"
        placeholder="Correo electr&oacute;nico"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-brand-500 transition" />
      <input type="password" name="password" required autocomplete="current-password"
        placeholder="Contrase&ntilde;a"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-brand-500 transition" />
      <button id="btn-login-submit" type="submit"
        class="w-full py-3.5 bg-brand-600 hover:bg-brand-500 text-white rounded-xl font-semibold transition flex items-center justify-center gap-2">
        <span>Iniciar sesi&oacute;n</span>
      </button>
    </form>

    <!-- Registro -->
    <form id="form-register" class="space-y-4 hidden" novalidate>
      <input type="text" name="name" autocomplete="name"
        placeholder="Nombre (opcional)"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-brand-500 transition" />
      <input type="email" name="email" required autocomplete="email"
        placeholder="Correo electr&oacute;nico"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-brand-500 transition" />
      <input type="password" name="password" required autocomplete="new-password"
        placeholder="Contrase&ntilde;a (min. 8 caracteres)"
        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-brand-500 transition" />
      <button id="btn-register-submit" type="submit"
        class="w-full py-3.5 bg-brand-600 hover:bg-brand-500 text-white rounded-xl font-semibold transition flex items-center justify-center gap-2">
        <span>Crear cuenta</span>
      </button>
    </form>

    <!-- Separador OAuth -->
    <div class="flex items-center gap-4 my-6">
      <hr class="flex-1 border-gray-700" />
      <span class="text-gray-600 text-xs uppercase tracking-wider">o continua con</span>
      <hr class="flex-1 border-gray-700" />
    </div>

    <!-- OAuth buttons -->
    <div class="grid grid-cols-2 gap-3">
      <!-- Google -->
      <a id="btn-google" href="#"
         class="flex items-center justify-center gap-2.5 py-2.5 bg-white hover:bg-gray-100 text-gray-800 rounded-xl font-semibold text-sm transition">
        <svg class="w-5 h-5 shrink-0" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Google
      </a>

      <!-- Facebook -->
      <a id="btn-facebook" href="#"
         onclick="alert('Facebook OAuth - disponible en version completa'); return false;"
         class="flex items-center justify-center gap-2.5 py-2.5 bg-[#1877F2] hover:bg-[#166FE5] text-white rounded-xl font-semibold text-sm transition">
        <svg class="w-5 h-5 shrink-0" viewBox="0 0 24 24" fill="currentColor">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        Facebook
      </a>
    </div>

    <!-- Mensaje error/exito -->
    <div id="auth-message" class="text-center text-sm mt-5 hidden rounded-xl py-3 px-4"></div>

    <!-- Metodos de pago -->
    <div class="mt-8 pt-6 border-t border-gray-800">
      <p class="text-center text-xs text-gray-600 mb-4 uppercase tracking-wider">Pagos seguros con</p>
      <div class="flex items-center justify-center gap-5">

        <!-- PayPal -->
        <div title="PayPal" class="opacity-50 hover:opacity-100 transition cursor-default">
          <svg class="h-6" viewBox="0 0 101 32" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.8 5.6H6.4C6 5.6 5.6 5.9 5.5 6.3L3 24.4c-.1.3.2.6.5.6h3.2c.4 0 .8-.3.8-.7l.7-4.4c.1-.4.4-.7.8-.7h2c4.2 0 6.6-2 7.2-6 .3-1.7 0-3.1-.8-4C16.5 6.2 14.9 5.6 12.8 5.6zm.7 5.9c-.3 2.2-2.1 2.2-3.7 2.2h-.9l.7-4.2c0-.3.3-.4.5-.4h.4c1.1 0 2.2 0 2.7.6.4.4.4 1 .3 1.8z" fill="#253B80"/>
            <path d="M35.5 11.4h-3.2c-.3 0-.5.2-.5.4l-.1.9-.2-.3c-.7-1-2.2-1.3-3.7-1.3-3.5 0-6.5 2.6-7.1 6.3-.3 1.8.1 3.6 1.1 4.8 1 1.1 2.3 1.6 3.9 1.6 2.8 0 4.4-1.8 4.4-1.8l-.1.9c-.1.3.2.6.5.6h2.9c.4 0 .8-.3.8-.7l1.7-10.8c.2-.3-.1-.6-.4-.6zm-4.4 6.1c-.3 1.8-1.8 3-3.6 3-1 0-1.7-.3-2.2-.9-.5-.6-.7-1.5-.5-2.4.3-1.8 1.8-3 3.6-3 .9 0 1.7.3 2.2.9.5.6.7 1.5.5 2.4z" fill="#253B80"/>
            <path d="M57.8 11.4h-3.2c-.3 0-.6.2-.8.4l-4.5 6.6-1.9-6.4c-.1-.4-.5-.6-.8-.6h-3.2c-.4 0-.6.4-.5.7l3.6 10.5-3.4 4.8c-.2.3 0 .8.4.8h3.2c.3 0 .6-.2.8-.4l10.8-15.6c.3-.3.1-.8-.5-.8z" fill="#253B80"/>
            <path d="M66.7 5.6h-6.4c-.4 0-.8.3-.8.7l-2.5 18.1c-.1.3.2.6.5.6h3.4c.3 0 .5-.2.6-.5l.7-4.6c.1-.4.4-.7.8-.7h2c4.2 0 6.6-2 7.2-6 .3-1.7 0-3.1-.8-4-1-1-.9-1.6-4.7-1.6zm.7 5.9c-.3 2.2-2.1 2.2-3.7 2.2h-.9l.7-4.2c0-.3.3-.4.5-.4h.4c1.1 0 2.2 0 2.7.6.4.4.4 1 .3 1.8z" fill="#179BD7"/>
            <path d="M89.4 11.4h-3.2c-.3 0-.5.2-.5.4l-.1.9-.2-.3c-.7-1-2.2-1.3-3.7-1.3-3.5 0-6.5 2.6-7.1 6.3-.3 1.8.1 3.6 1.1 4.8 1 1.1 2.3 1.6 3.9 1.6 2.8 0 4.4-1.8 4.4-1.8l-.1.9c-.1.3.2.6.5.6H87c.4 0 .8-.3.8-.7l1.7-10.8c.2-.3-.1-.6-.1-.6zm-4.4 6.1c-.3 1.8-1.8 3-3.6 3-1 0-1.7-.3-2.2-.9-.5-.6-.7-1.5-.5-2.4.3-1.8 1.8-3 3.6-3 .9 0 1.7.3 2.2.9.5.6.7 1.5.5 2.4z" fill="#179BD7"/>
            <path d="M93.2 6.1l-2.6 18.3c-.1.3.2.6.5.6h2.8c.4 0 .8-.3.8-.7l2.5-18.1c.1-.3-.2-.6-.5-.6h-3c-.3 0-.5.2-.5.5z" fill="#179BD7"/>
          </svg>
        </div>

        <!-- Mastercard -->
        <div title="Mastercard" class="opacity-50 hover:opacity-100 transition cursor-default">
          <svg class="h-8" viewBox="0 0 38 24" xmlns="http://www.w3.org/2000/svg">
            <rect width="38" height="24" rx="4" fill="#1A1F36"/>
            <circle cx="15" cy="12" r="7" fill="#EB001B"/>
            <circle cx="23" cy="12" r="7" fill="#F79E1B"/>
            <path d="M19 6.8a7 7 0 0 1 0 10.4A7 7 0 0 1 19 6.8z" fill="#FF5F00"/>
          </svg>
        </div>

        <!-- Binance -->
        <div title="Binance Pay" class="opacity-50 hover:opacity-100 transition cursor-default">
          <svg class="h-7" viewBox="0 0 126 126" xmlns="http://www.w3.org/2000/svg">
            <path d="M38.6 53.3L63 29 87.4 53.4l13.7-13.7L63 2.3 24.9 39.6z" fill="#F3BA2F"/>
            <path d="M2.3 63l13.7-13.7 13.7 13.7-13.7 13.7zM38.6 72.7L63 97.1l24.4-24.4 13.7 13.7L63 123.7 24.9 86.4z" fill="#F3BA2F"/>
            <path d="M96.3 63l13.7-13.7 13.7 13.7-13.7 13.7zM75.5 63L63 50.5 50.5 63 63 75.5z" fill="#F3BA2F"/>
          </svg>
        </div>

        <!-- Crypto generico -->
        <div title="Crypto" class="opacity-50 hover:opacity-100 transition cursor-default">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="#6B7280" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14H9V8h2v8zm4-4h-2v4h-2v-4H9v-2h6v2z"/>
          </svg>
        </div>

      </div>
    </div>

  </div>
</section>

<script is:inline define:vars={{ GOOGLE_CLIENT_ID, API }}>

  function switchTab(tab) {
    var isLogin = tab === 'login';
    document.getElementById('form-login').classList.toggle('hidden', !isLogin);
    document.getElementById('form-register').classList.toggle('hidden', isLogin);
    var base = 'flex-1 py-2.5 rounded-lg text-sm font-semibold transition';
    document.getElementById('tab-login').className = base + (isLogin ? ' text-white bg-brand-600' : ' text-gray-400 hover:text-white');
    document.getElementById('tab-register').className = base + (!isLogin ? ' text-white bg-brand-600' : ' text-gray-400 hover:text-white');
  }
  window.switchTab = switchTab;

  function showMessage(text, isError) {
    var el = document.getElementById('auth-message');
    el.textContent = text;
    el.className = 'text-center text-sm mt-5 rounded-xl py-3 px-4 ' + (isError ? 'bg-red-500/10 text-red-400 border border-red-500/20' : 'bg-green-500/10 text-green-400 border border-green-500/20');
  }

  function setLoading(btnId, loading) {
    var btn = document.getElementById(btnId);
    if (!btn) return;
    btn.disabled = loading;
    btn.querySelector('span').textContent = loading ? 'Cargando...' : (btnId === 'btn-login-submit' ? 'Iniciar sesion' : 'Crear cuenta');
  }

  document.getElementById('form-login').addEventListener('submit', async function(e) {
    e.preventDefault();
    setLoading('btn-login-submit', true);
    var data = Object.fromEntries(new FormData(e.target));
    try {
      var res = await fetch(API + '/api/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(data),
      });
      var json = await res.json();
      if (!res.ok) { showMessage(json.error || 'Error al iniciar sesion', true); return; }
      showMessage('Bienvenido! Redirigiendo...', false);
      setTimeout(function() { window.location.href = '/dashboard'; }, 800);
    } catch {
      showMessage('No se puede conectar con el servidor.', true);
    } finally {
      setLoading('btn-login-submit', false);
    }
  });

  document.getElementById('form-register').addEventListener('submit', async function(e) {
    e.preventDefault();
    setLoading('btn-register-submit', true);
    var data = Object.fromEntries(new FormData(e.target));
    try {
      var res = await fetch(API + '/api/auth/register', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify(data),
      });
      var json = await res.json();
      if (!res.ok) { showMessage(json.error || 'Error al registrarse', true); return; }
      showMessage('Cuenta creada! Redirigiendo...', false);
      setTimeout(function() { window.location.href = '/dashboard'; }, 800);
    } catch {
      showMessage('No se puede conectar con el servidor.', true);
    } finally {
      setLoading('btn-register-submit', false);
    }
  });

  document.getElementById('btn-google').addEventListener('click', function(e) {
    e.preventDefault();
    var params = new URLSearchParams({
      client_id: GOOGLE_CLIENT_ID,
      redirect_uri: API + '/api/auth/google/callback',
      response_type: 'code',
      scope: 'openid email profile',
      prompt: 'select_account',
    });
    window.location.href = 'https://accounts.google.com/o/oauth2/v2/auth?' + params;
  });

</script>